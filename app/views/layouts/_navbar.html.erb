<script>
  document.addEventListener("DOMContentLoaded", function() {
    const searchInput = document.getElementById("search");
    const resultsDiv = document.getElementById("search-results");

    searchInput.addEventListener("input", function() {
        if (searchInput.value.length > 2) {
            fetch(`/search/suggest?query=${searchInput.value}`)
                .then(response => response.json())
                .then(data => {
                    resultsDiv.innerHTML = ""; // Clear previous results

                    data[1][1].forEach(item => {
                        // Filter only NBA players
                        if(item.type === 'player' && item.league === "NBA"){
                            const resultItem = document.createElement("div");
                            resultItem.textContent = item.display;
                            resultItem.className = "px-3 py-2 hover:bg-gray-200 cursor-pointer";

                            // Attach a click listener to the result item
                            resultItem.addEventListener("click", function() {
                                // Set the input's value to the clicked item's display value (optional)
                                searchInput.value = item.display;

                                // Change the window's location to the desired URL
                                window.location.href = item.path;
                            });

                            resultsDiv.appendChild(resultItem);
                        }
                    });
                });
        } else {
            resultsDiv.innerHTML = ""; // Clear results if the input is too short
        }
    });
});


</script>
